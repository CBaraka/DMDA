{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title "Bienvenue dans la gestion du site de l'Association DMDA Mayotte" %}

{% block page_content %}
	<div class="container">
		<div class="row  mt-3">
			<div class="col-6">
				<p class="h4">Description de l'Association</p>
				<div class="list-group">
				{% for DescAsso in descAsso %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
							{{DescAsso.titre}}
							{{DescAsso.contenu}}
							{{DescAsso.image}}
						<span class="badge badge-primary badge-pill"></span>
					</li>
				{% endfor %}
					
				</div>
			</div>

			<div class="col-6"></div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<p class="h4">Listes des utilisateurs</p>
				<div class="list-group">
				{% for User in user %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
							{{User.email}}
						<span class="badge badge-primary badge-pill"></span>
					</li>
				{% endfor %}
					
				</div>
			</div>
		</div>

	</div>

	<pre>
    </pre>
{% endblock %}
