{% extends "base.html.twig" %}
{% block title %}
	{{pagetitle}}
{% endblock %}
{% block body %}
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<h2>Description de l'association</h2>

					{% for message in app.flashes('success') %}
						<div class="alert alert-success" role="alert">{{  message}}</div>
					{% endfor %}
					<div class="description">
						{% for DescAsso in description %}
							<div class="titre">{{DescAsso.titre}}</div>
							<div class="contenu">{{DescAsso.contenu}}</div>
							<div class="image">{{DescAsso.image}}</div>
						{% endfor %}
					</div>
				</div>
				<div class="col-sm-9">
					<h2>Evenements</h2>
					<div class"evenement">
						{% for Evenements in evenements %}
							<div class="titre">{{Evenements.titre}}</div>
							<div class="contenu">{{Evenements.contenu}}</div>
							<div class="image">{{Evenements.image}}</div>
							<div class="date">{{Evenements.date}}</div>
							<div class="tel">{{Evenements.telephone}}</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
