<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Association DMDA
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}"/>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			{% include "_header.html.twig" %}

			{% block body %}
				<h2>Long in!</h2>
				<hr/>
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('logout') }}">Logout</a>
						</div>
					{% endif %}

					<3 class="h3 mb-3 font-weight-normal">Please sign in</3>
					<label for="inputEmail" class="sr-only">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
					<label for="inputPassword" class="sr-only">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					        See https://symfony.com/doc/current/security/remember_me.html
					
					        <div class="checkbox mb-3">
					            <label>
					                <input type="checkbox" name="_remember_me"> Remember me
					            </label>
					        </div>
					    #}

					<button class="btn btn-lg btn-primary" type="submit">
						Sign in
					</button>
				</form>
			{% endblock %}

			{% include "_footer.html.twig" %}

			{% block javascripts %}{% endblock %}


		</body>
	</html>
